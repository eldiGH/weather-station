{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Frontend:time-sheet",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/frontends/time-sheet/src"
    },
    {
      "name": "Frontend:weather-station",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/frontends/weahter-station/src"
    },
    {
      "name": "Backend",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["be:dev"],
      "skipFiles": ["<node_internals>/**"],
      "outputCapture": "std",
      "type": "node"
    },
    {
      "name": "SSR:weather-station",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["fe:weather-station:dev"],
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
      // "console": "integratedTerminal"
    },
    {
      "name": "SSR:time-sheet",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["fe:time-sheet:dev"],
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
      // "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "Fullstack (weather-station)",
      "configurations": [
        "Backend",
        "SSR:weather-station",
        "Frontend:weather-station"
      ],
      "stopAll": true
    },
    {
      "name": "SSR+Frontend (weather-station)",
      "configurations": ["SSR:weather-station", "Frontend:weather-station"],
      "stopAll": true
    },
    {
      "name": "Fullstack (time-sheet)",
      "configurations": ["Backend", "SSR:time-sheet", "Frontend:time-sheet"],
      "stopAll": true
    },
    {
      "name": "SSR+Frontend (time-sheet)",
      "configurations": ["SSR:time-sheet", "Frontend:time-sheet"],
      "stopAll": true
    }
  ]
}
