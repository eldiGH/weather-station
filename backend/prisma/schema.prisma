// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int                   @id @default(autoincrement())
  email             String                @unique @db.VarChar(32)
  password          String                @db.VarChar(60)

  createdAt         DateTime              @default(now())

  sensors           Sensor[]              @relation()
  refreshTokens     RefreshToken[]        @relation()
  kiosks            Kiosk[]               @relation()
}

model Kiosk {
  id                Int                   @id @default(autoincrement())

  kioskUuid         String                @unique @db.Char(36)

  sensors           Sensor[]

  ownerId           Int
  owner             User                  @relation(fields: [ownerId], references: [id])

  latitude          Float?
  longitude         Float?
}

model RefreshToken {
  id                Int                   @id @default(autoincrement())
  token             String                @unique @db.VarChar(300)
  revoked           Boolean               @default(false)

  userId            Int                   
  user              User                  @relation(fields: [userId], references: [id])

  sessionId         String                @db.Char(36)

  expirationDate    DateTime

  createdAt         DateTime              @default(now())
}

enum SensorType {
  BME68X
}

model Sensor {
  id                Int                   @id @default(autoincrement())

  name              String                @unique @db.VarChar(50)
  type              SensorType
  secret            String                @unique @db.Char(36)

  createdAt         DateTime              @default(now())
  updatedAt         DateTime              @updatedAt

  bme68XData        BME68XSensorData[]

  ownerId           Int
  owner             User                  @relation(fields: [ownerId], references: [id])

  kiosks            Kiosk[]
}

model BME68XSensorData {
  id                Int                   @id @default(autoincrement())
  
  temperature       Float         
  humidity          Float
  pressure          Float
  gasResistance     Float
  batteryPercentage Int               

  sensorId          Int
  sensor            Sensor                @relation(fields: [sensorId], references: [id])
  createdAt         DateTime              @default(now())
}