{
  "name": "backend",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "exports": {
    "./schemas": "./src/schemas/index.ts",
    "./trpc": "./src/clientExports.ts",
    "./types": "./src/types/index.ts",
    "./errors": "./src/errors/index.ts",
    "./helpers": "./src/helpers/index.ts"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "tsx src/index.ts",
    "lint": "prettier --check . && eslint .",
    "check": "tsc",
    "format": "prettier --write .",
    "build": "esbuild src/index.ts --bundle --outfile=dist/index.js --platform=node --target=node16 --packages=external --format=esm",
    "create-migration": "drizzle-kit generate",
    "db:migrate": "npx drizzle-kit migrate",
    "db:seed": "tsx drizzle/seed",
    "db:drop": "tsx drizzle/drop",
    "db:push": "drizzle-kit push:pg",
    "db:recreate": "pnpm db:drop && pnpm db:push && pnpm db:seed"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/node": "^22.13.0",
    "@types/pg": "^8.11.11",
    "@types/url-join": "^4.0.3",
    "@types/uuid": "^10.0.0",
    "@types/validator": "^13.12.2",
    "@types/ws": "^8.5.14",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "drizzle-kit": "^0.30.4",
    "esbuild": "^0.24.2",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "trpc-panel": "^1.3.4",
    "trpc-playground": "^1.0.4",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.22.0",
    "url-join": "^5.0.0"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.2",
    "@fastify/websocket": "^11.0.2",
    "@trpc/server": "^10.45.2",
    "axios": "^1.7.9",
    "bcryptjs": "^2.4.3",
    "cookie": "^1.0.2",
    "core-js": "^3.40.0",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "devalue": "^5.1.1",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.39.1",
    "drizzle-zod": "^0.7.0",
    "fastify": "^5.2.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.13.1",
    "redis": "^4.7.0",
    "uuid": "^11.0.5",
    "ws": "^8.18.0",
    "zod": "^3.24.1"
  }
}
