{
  "name": "backend",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "exports": {
    "./schemas": "./src/schemas/index.ts",
    "./trpc": "./src/clientExports.ts",
    "./types": "./src/types/index.ts",
    "./errors": "./src/errors/index.ts"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "tsx src/index.ts",
    "lint": "prettier --check . && eslint .",
    "type-check": "tsc",
    "format": "prettier --write .",
    "build": "esbuild src/index.ts --bundle --outfile=dist/index.js --platform=node --target=node16 --packages=external --format=esm",
    "create-migration": "drizzle-kit generate:pg",
    "db:migrate": "tsx drizzle/migrate",
    "db:seed": "tsx drizzle/seed",
    "db:drop": "tsx drizzle/drop",
    "db:push": "drizzle-kit push:pg",
    "db:recreate": "pnpm db:drop && pnpm db:push && pnpm db:seed"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie": "^0.6.0",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.9",
    "@types/url-join": "^4.0.3",
    "@types/uuid": "^10.0.0",
    "@types/validator": "^13.12.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "drizzle-kit": "^0.22.8",
    "esbuild": "^0.23.0",
    "eslint": "^9.6.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.2",
    "source-map-support": "^0.5.21",
    "typescript": "^5.5.3",
    "url-join": "^5.0.0"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/websocket": "^10.0.1",
    "@trpc/server": "^10.45.2",
    "axios": "^1.7.2",
    "bcryptjs": "^2.4.3",
    "cookie": "^0.6.0",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "devalue": "^5.0.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.31.2",
    "drizzle-zod": "^0.5.1",
    "fastify": "^4.28.1",
    "jsonwebtoken": "^9.0.2",
    "postgres": "^3.4.4",
    "redis": "^4.6.14",
    "tsx": "^4.16.0",
    "uuid": "^10.0.0",
    "ws": "^8.17.1",
    "zod": "^3.23.8"
  }
}
